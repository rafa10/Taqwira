{% form_theme form 'materialize_layout.html.twig' %}

{% block body %}

    <!-- Modal Structure -->
    {{ form_start(form, {'attr':{'id': 'formValidate', 'class': 'formValidate', 'novalidate': 'novalidate'}}) }}
    <div class="modal-content">
        <h5 class="flow-text"><i class="small left mdi-content-add-circle"></i> Ajouter un nouveau tarif</h5><br>
        {{ form_row(form._token) }}
        <div class="row">
            <div class="input-field col s4">
                <label for="type" class="active">Type*</label>
                {{ form_widget(form.bookingType) }}
                <div class="type"></div>
            </div>
            <div class="input-field col s4">
                <label for="field" class="active">Terrain*</label>
                {{ form_widget(form.field) }}
                <div class="field"></div>
            </div>
            <div class="input-field col s4">
                <label for="amount" class="">Montant TND*</label>
                {{ form_widget(form.amount) }}
                <div class="amount"></div>
            </div>
            <div class="input-field col s12">
                <label for="day" class="active">Jour*</label>
                {{ form_widget(form.day) }}
                <div class="day"></div>
            </div>
            <div class="input-field col s12">
                <label for="session" class="active">SÃ©ances</label>
                {{ form_widget(form.session) }}
                <div class="session"></div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="modal-action waves-effect waves-light yellow accent-4 black-text btn" id="save">Enregistrer</button>
        <button type="button" class="modal-action modal-close waves-effect btn-flat" id="cancel">Annuler</button>
    </div>
    {{ form_end(form, { 'render_rest': false } ) }}

{% endblock %}

<script>

    $(document).ready(function(){
        //
        $("#formValidate").validate({
            rules: {
                'price[description]' : {
                    required: true
                },
                'price[amount]': {
                    required: true
                }
            },
            //For custom messages
            messages: {
                'price[description]' : {
                    required: "Champs requis"
                },
                'price[amount]': {
                    required: "Champs requis"
                }
            },
            errorElement : 'div',
            errorPlacement: function(error, element) {
                var placement = $(element).data('error');
                if (placement) {
                    $(placement).append(error)
                } else {
                    error.insertAfter(element);
                }
            }
        });

    });

</script>


