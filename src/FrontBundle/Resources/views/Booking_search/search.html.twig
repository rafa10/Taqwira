{% extends "FrontBundle::base.html.twig" %}

{% block title %} Réservation de terrain | Taqwira {% endblock title %}

{% block body %}

    <div id="form-booking-search" class="block grey lighten-3">
        <div class="row">
            <!--=== Booking form ====================================================================================-->
            <form name="form" method="POST" action="{{ path('booking_search') }}" class="col s12 m10 offset-m1 form-validation">
                <!-- region & ville -->
                <div class="col s12 m3 offset-m1 card-panel">
                    <div class="input-field col s12">
                        <i class="material-icons prefix">location_on</i>
                        {{ form_widget(form.ville) }}
                        {{ form_label(form.ville, 'Ville') }}
                    </div>
                </div>
                <!-- centre -->
                <div class="col s12 m3 card-panel" id="autocompelet-center">
                    <div class="input-field col s12">
                        <i class="material-icons prefix">business</i>
                        {{ form_widget(form.center) }}
                        {{ form_label(form.center, 'Center') }}
                    </div>
                </div>
                <!-- date -->
                <div class="col s12 m3 card-panel">
                    <div class="input-field col s12">
                        <i class="material-icons prefix">event</i>
                        {{ form_widget(form.date) }}
                        {{ form_label(form.date, 'Date') }}
                    </div>
                </div>
                <!-- btn form -->
                <div class="col s12 m1" style="margin-top: 1.2rem">
                    <button class="btn btn-large waves-effect waves-light yellow left z-depth-1 black-text" type="button" id="search">Rechercher</button>
                </div>
            </form>
            <!--end booking form-->
            <!--=== Content dynamic of message and booking result= ==================================================-->
            <div class="col s12 m10 offset-m1">
                <!--=== Message session falsh back ==================================================================-->
                {% if app.request.hasPreviousSession %}
                    {% for type, messages in app.session.flashbag.all() %}
                        {% for message in messages %}
                            <div class="row">
                                <div id="card-alert" class="card green lighten-5 center-block col s12 m4 offset-m4">
                                    <div class="card-content green-text">
                                        <p class="center-align">{{ type }} : {{ message }}</p>
                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                    {% endfor %}
                {% endif %}
                <!--=== bloc test image content =====================================================================-->
                <div id="map-page-content" class="col s12 m10 offset-m1">
                    <div class="map-card">
                        <div class="card">
                            <div class="card-content" style="border-bottom: 1px solid #CCC">
                                <h4 class="card-title grey-text text-darken-4"><a href="#" class="grey-text text-darken-4">Le réseau taqwira</a></h4>
                                <p class="blog-post-content">Taqwira, c'est plus de 100 centre de football en Tunisie, mais c'est surtout la solution pour la réservation des terrain. Vous n'avez plus qu'à rechercher votre terrain !.</p>
                            </div>
                            <div class="card-image waves-effect waves-block waves-light">
                                <img src="{{ asset('public/images/arena.png') }}" alt="bg main">
                            </div>
                        </div>
                    </div>
                </div>
                <!--=== Preloader content ===========================================================================-->
                <div id="preloader-page-content" class="card-panel center-align z-depth-0 hide" style="position: absolute; top: 40%; left: 44%;">
                    <div class="preloader-wrapper small active">
                        <div class="spinner-layer spinner-blue-only">
                            <div class="circle-clipper left">
                                <div class="circle"></div>
                            </div><div class="gap-patch">
                                <div class="circle"></div>
                            </div><div class="circle-clipper right">
                                <div class="circle"></div>
                            </div>
                        </div>
                    </div><br>S'il vous plaît, attendez...
                </div>
                <!--=== content result of search booking match ======================================================-->
                <div id="booking-search" class="col s12 m12"></div>

            </div>

        </div>
    </div>

    {# === CSS STYLE === #}
    <style>
        body{
            display: flex;
            min-height: 100vh;
            flex-direction: column;
        }
        html, body, .block {
            flex: 1 0 auto;
        }
        footer {
            padding-left: 0;
        }

        .card .card-action a:not(.btn):not(.btn-large):not(.btn-large):not(.btn-floating) {
             margin-right: 0px;
        }

    </style>

{% endblock body %}

