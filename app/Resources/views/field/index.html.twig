{% extends 'base.html.twig' %}

{% block body %}

    <!-- START CONTENT -->
    <section id="content">

        <!--breadcrumbs start-->
        <div id="breadcrumbs-wrapper">
            <!-- Search for small screen -->
            <div class="header-search-wrapper grey hide-on-large-only">
                <i class="mdi-action-search active"></i>
                <input type="text" name="Search" class="header-search-input z-depth-2" placeholder="Explore Materialize">
            </div>
            <div class="container">
                <div class="row">
                    <div class="col s12 m12 l12">
                        <h5 class="breadcrumbs-title">Terrains</h5>
                        <ol class="breadcrumbs">
                            <li><a href="/">Dashboard</a></li>
                            <li class="active">Terrains</li>
                        </ol>
                    </div>
                </div>
            </div>
        </div>
        <!--breadcrumbs end-->

        <!--start container-->
        <div class="container">
            <div class="section">
                {% if fields == null %}
                    <p class="caption"><i class="mdi-action-info left"></i>Pour commencer ajoutez  <i class="mdi-content-add-circle green-text"></i>  au moins terrain et disponibilité séances de votre centre.</p>
                {% endif %}
               <div class="divider"></div>
                <!--DataTables example-->
                <div id="table-datatables" class="card-panel">
                    <div class="row">
                        <div class="col s12">
                            <table id="data-table-simple" class="responsive-table display" cellspacing="0">
                                <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Nom</th>
                                    {#<th>Description</th>#}
                                    <th>Capacité</th>
                                    <th>Séances</th>
                                    {% if is_granted('ROLE_SUPER_ADMIN') %}<th>Centre</th>{% endif %}
                                    <th class="center-align">Actions</th>
                                </tr>
                                </thead>

                                <tbody>
                                {% for field in fields %}
                                    <tr>
                                        <td>{{ field.id }}</td>
                                        <td>{{ field.name }}</td>
                                        {#<td>{{ field.description|slice(0, 50) }} ...</td>#}
                                        <td>{{ field.capacity }} <i class="mdi-social-people"></i></td>
                                        <td> <div class="chip"><i class="mdi-action-alarm"></i> {{ field.session|first }}</div> à <div class="chip"><i class="mdi-action-alarm"></i> {{ field.session|last }}</div> </div> </td>
                                        {% if is_granted('ROLE_SUPER_ADMIN') %}<td><div class="chip"><i class="mdi-communication-business"></i> {{ field.center.name }}</div></td>{% endif %}
                                        <td class="center-align">
                                            <button type="button" data-href="{{ path('field_show', { 'id': field.id }) }}" class="btn-floating waves-effect waves-light grey lighten-3 modal_trigger"><i class="mdi-action-info-outline grey-text"></i></button>
                                            <button type="button" data-href="{{ path('field_edit', { 'id': field.id }) }}" class="btn-floating waves-effect waves-light grey lighten-3 modal_trigger"><i class="mdi-editor-mode-edit grey-text"></i></button>
                                            <button type="button" data-href="{{ path('field_delete', { 'id': field.id }) }}" class="btn-floating btn-warning-confirm waves-effect waves-light grey lighten-3 "><i class="mdi-action-delete grey-text"></i></button>
                                        </td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>

            </div>
        </div>
        <!--end container-->

    </section>
    <!-- END CONTENT -->

    <!-- Btn Add Trigger -->
    <div class="fixed-action-btn" style="bottom: 50px; right: 19px;">
        <button type="button" data-href="{{ path('field_new') }}" class="btn-floating waves-effect waves-light green modal_trigger"><i class="medium mdi-content-add-circle green-text text-lighten-4"></i></button>
    </div>

    <!-- Loader -->
    {% include 'AppBundle:loader:loader_form.html.twig' %}
    <!-- end Loader -->

{% endblock body %}

