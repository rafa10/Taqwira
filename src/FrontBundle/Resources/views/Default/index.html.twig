    </section>
<!-- //////////////////////////////////////////////////////////////////////////// -->
<!-- //////////////////////////////////////////////////////////////////////////// -->
    <section id="video" class="block grey lighten-3">
        <div class="row">
            <div class="col s12 center-align">
                <h3 class="text-header">Revoir votre match en vidéo</h3>
                <p class="flow-text">Si vous avez joué un match sur terrain équipé par caméra, vous avez l'occasion de regarder votre match en vidéo.</p>
            </div>
        </div>
        <div class="container">
            <div class="row center-align">
                <div class="col s6 m2 offset-m3 circle hide-on-small-only">
                    <a href="#">
                        <img src="{{ asset('public/images/soccer_icon/youtube.png') }}">
                    </a>
                </div>
                <div class="col s12 m2 circle">
                    <a href="#">
                        <img src="{{ asset('public/images/soccer_icon/camera.png') }}">
                    </a>
                </div>
                <div class="col s6 m2 circle hide-on-small-only">
                    <a href="#">
                        <img src="{{ asset('public/images/soccer_icon/arena.png') }}">
                    </a>
                </div>
                <div class="col s12 m12 btn-video">
                    <div class="col s12 center-align">
                        <a class="btn btn-large waves-effect waves-light yellow accent-4 black-text" href="{{ path('video_login') }}">Match en vidéo</a>
                    </div>
                </div>
            </div>
        </div>

    </section>
    <!-- //////////////////////////////////////////////////////////////////////////// -->
    <!-- //////////////////////////////////////////////////////////////////////////// -->
    <section id="exagon-interlude" class="">

        {#<div class="row">#}
        {#<div class="col s12 center-align" style="margin-top: 1rem">#}
