{% extends 'base.html.twig' %}

{% set hideClass = null %} {% if not is_granted('ROLE_SUPER_ADMIN') %}  {% set hideClass = 'hide' %} {% endif %}

{% block body %}

    <!-- START CONTENT -->
    <section id="content">

        <!--breadcrumbs start-->
        <div id="breadcrumbs-wrapper">
            <!-- Search for small screen -->
            <div class="header-search-wrapper grey hide-on-large-only">
                <i class="mdi-action-search active"></i>
                <input type="text" name="Search" class="header-search-input z-depth-2" placeholder="Explore Materialize">
            </div>
            <div class="container">
                <div class="row">
                    <div class="col s12 m12 l12">
                        <h5 class="breadcrumbs-title">Programme</h5>
                        <ol class="breadcrumbs">
                            <li><a href="/">Dashboard</a></li>
                            <li><a href="#">Académie</a></li>
                            <li class="active">Programme</li>
                        </ol>
                    </div>
                </div>
            </div>
        </div>
        <!--breadcrumbs end-->

        <!--start container-->
        <div class="container">
            <div class="section">
                {% if programs == null %}
                    <div id="card-alert" class="card deep-purple lighten-5">
                        <div class="card-content deep-purple-text">
                            <p><i class="mdi-action-info "></i> INFO : Ajouter au moins un terrain pour pouvoire ajouter un programme académie.</p>
                            <p><i class="mdi-action-info "></i> MENU : <i class="mdi-action-view-array"></i> Terrain <i class="mdi-navigation-chevron-right"></i>  <i class="mdi-content-add-circle green-text"></i> .</p>
                        </div>
                        <button type="button" class="close deep-purple-text" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">×</span>
                        </button>
                    </div>
                {% endif %}
                <div class="divider"></div>
                <!--DataTables example-->
                <div id="table-datatables" class="card-panel">
                    <div class="row">
                        <div class="col s12">
                            <table id="data-table-simple" class="responsive-table display" cellspacing="0">
                                <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Terrain</th>
                                    <th>Type</th>
                                    <th>Jours</th>
                                    <th>Temps</th>
                                    <th class="center-align">Actions</th>
                                </tr>
                                </thead>

                                <tbody>
                                {% for program in programs %}
                                    <tr>
                                        <td>{{ program.id }}</td>
                                        <td>{{ program.field.name }}</td>
                                        <td>{{ program.bookingType }}</td>
                                        <td> {% for item in program.day %}<div class="chip">{{ item|trans }}</div>&nbsp;{% endfor %} </td>
                                        <td> <div class="chip">De <b>{{ program.Session|first }}</b> à <b>{{ program.Session|last }}</b></div> </td>
                                        <td class="center-align">
                                            <button type="button" data-href="{{ path('program_edit', { 'id': program.id }) }}" class="btn-floating waves-effect waves-light grey lighten-3 modal_trigger"><i class="mdi-editor-mode-edit grey-text"></i></button>
                                            <button type="button" data-href="{{ path('program_delete', { 'id': program.id }) }}" class="btn-floating waves-effect waves-light grey lighten-3 red btn-warning-confirm"><i class="mdi-action-delete grey-text"></i></button>
                                        </td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>

            </div>
        </div>
        <!--end container-->

    </section>
    <!-- END CONTENT -->

    <!-- Btn Add Trigger -->
    <div class="fixed-action-btn" style="bottom: 50px; right: 19px;">
        {% if is_granted('ROLE_SUPER_ADMIN') %}
            <button type="button" data-href="{{ path('program_new') }}" class="btn-floating waves-effect waves-light green modal_trigger"><i class="mdi-content-add-circle green-text text-lighten-4"></i></button>
        {% else %}
            {% if arrayField is not empty %}
                <button type="button" data-href="{{ path('program_new') }}" class="btn-floating waves-effect waves-light green modal_trigger"><i class="mdi-content-add-circle green-text text-lighten-4"></i></button>
            {% endif %}
        {% endif %}
    </div>

    <!-- Loader -->
    {% include 'AppBundle:loader:loader_form.html.twig' %}
    <!-- end Loader -->

{% endblock body %}