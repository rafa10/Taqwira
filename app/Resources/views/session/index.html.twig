{% extends 'base.html.twig' %}


{% block body %}

    <!-- START CONTENT -->
    <section id="content">

        <!--breadcrumbs start-->
        <div id="breadcrumbs-wrapper">
            <!-- Search for small screen -->
            <div class="header-search-wrapper grey hide-on-large-only">
                <i class="mdi-action-search active"></i>
                <input type="text" name="Search" class="header-search-input z-depth-2" placeholder="Explore Materialize">
            </div>
            <div class="container">
                <div class="row">
                    <div class="col s12 m12 l12">
                        <h5 class="breadcrumbs-title">Séances</h5>
                        <ol class="breadcrumbs">
                            <li><a href="/">Dashboard</a></li>
                            <li><a href="#">Planifications</a></li>
                            <li class="active">Séances</li>
                        </ol>
                    </div>
                </div>
            </div>
        </div>
        <!--breadcrumbs end-->

        <!--start container-->
        <div class="container">
            <div class="section">
                {% if sessions == null %}
                    <p class="caption"><i class="mdi-action-info left"></i>Ajouter <i class="mdi-content-add-circle green-text"></i>  toutes les séances possibles de votre centre.</p>
                {% endif %}
                <div class="divider"></div>
                <!--DataTables example-->
                <div id="table-datatables" class="card-panel">
                    <p class= "tools"><button type="button" data-href="{{ path('session_new') }}" class="btn-floating waves-effect waves-light green modal_trigger"><i class="mdi-content-add-circle green-text text-lighten-4"></i></button></p>
                    <div class="row">
                        <div class="col s12">
                            <table id="data-table-simple" class="responsive-table display" cellspacing="0">
                                <thead>
                                <tr>
                                    <th>id</th>
                                    <th>Départ</th>
                                    <th>Fin</th>
                                    {% if is_granted('ROLE_SUPER_ADMIN') %}<th>Centre</th>{% endif %}
                                    <th class="center-align">Actions</th>
                                </tr>
                                </thead>

                                <tbody>
                                {% for session in sessions %}
                                    <tr>
                                        <td>{{ session.id }}</td>
                                        <td><div class="chip"><i class="mdi-action-alarm"></i> {{ session.timeStart|date('H:i') }} </div></td>
                                        <td><div class="chip"><i class="mdi-action-alarm"></i> {{ session.timeEnd|date('H:i') }} </div></td>
                                        {% if is_granted('ROLE_SUPER_ADMIN') %}<td><div class="chip"><i class="mdi-communication-business"></i> {{ session.center.name }}</div></td>{% endif %}
                                        <td class="center-align">
                                            <button type="button" data-href="{{ path('session_edit', { 'id': session.id }) }}" class="btn-floating waves-effect waves-light grey lighten-3 modal_trigger"><i class="mdi-editor-mode-edit grey-text"></i></button>
                                            <button type="button" data-href="{{ path('session_delete', { 'id': session.id }) }}" class="btn-floating waves-effect waves-light grey lighten-3 btn-warning-confirm"><i class="mdi-action-delete grey-text"></i></button>
                                        </td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>

            </div>
        </div>
        <!--end container-->

    </section>
    <!-- END CONTENT -->

    <!-- Loader -->
    {% include 'AppBundle:loader:loader_form.html.twig' %}
    <!-- end Loader -->

{% endblock body %}

