<div class="email-content-wrap">
    <div class="row">
        <div class="col s10 m10 l10">
            <ul class="collection">
                <li class="collection-item avatar">
                    <span class="circle blue-grey">{{ contact.name|slice(0,1) }}</span>
                    <span class="email-title">{{ contact.name }}</span>
                    <p class="truncate grey-text ultra-small">A, Admin taqwira</p>
                    <p class="grey-text ultra-small">{{ contact.created|date('d-m-Y') ~' à '~ contact.created|date('H:i') }}</p>
                </li>
            </ul>
        </div>
        <div class="col s2 m2 l2 email-actions">
            <a href="#!"><span><i class="mdi-content-reply"></i></span></a>
            <a href="#!"><span><i class="mdi-navigation-more-vert"></i></span></a>
        </div>
    </div>
    <div class="email-content">
        <p>{{ contact.message }}</p>

        <br>
        <p>Coordonnées
            <br>{{ contact.name }}
            <br>{{ contact.email }}
            <br>{{ contact.phone }}
        </p>
    </div>
</div>
