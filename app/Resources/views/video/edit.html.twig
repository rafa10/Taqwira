{% block body %}

    <!-- Modal Structure -->
    {{ form_start(form) }}
    <div class="modal-content">
        <h5 class="flow-text"><i class="small left mdi-editor-border-color"></i> Modifier vidéo</h5><br>
        {#<div class="divider"></div><br>#}
        {{ form_row(form._token) }}
        <div class="row">
            <div class="input-field col s12">
                <label for=timepicker" class="active">Réservation*</label>
                {{ form_widget(form.booking) }}
                <div class="errorTxt1"></div>
            </div>
            <div class="input-field col s12">
                <label for=time_end" class="active">Url*</label>
                {{ form_widget(form.url, {'attr':{'placeholder': 'https://www.youtube.com/embed/Ix-FOujbutE'}}) }}
                <div class="errorTxt1"></div>
            </div>
        </div>
    </div>
    <div class="modal-footer ">
        <button type="button" class="modal-action waves-effect waves-light yellow accent-4 black-text btn" id="save">Enregistrer</button>
        <button type="button" class="modal-action modal-close waves-effect btn-flat" id="cancel">Annuler</button>
    </div>
    {{ form_end(form, { 'render_rest': false } ) }}

{% endblock %}

